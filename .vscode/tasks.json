{
    "windows": {
        "options": {
            "shell": {
                "executable": "${env:programfiles}\\git\\git-bash.exe",
                "args": ["--hide"]
            }
        }
    },
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup project",
            "type": "shell",
            "command": "scripts/setup-project.sh",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "echo": true,
                "showReuseMessage": false
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        }
    ]
}